<script>
 
  let currentImageIndex = 0; 

  
  document.getElementById('chooseStyle1').addEventListener('click', function() {
    
    console.log('Choose Style 1 button clicked');
  });

  document.getElementById('chooseStyle2').addEventListener('click', function() {
    
    console.log('Choose Style 2 button clicked');
  });

  
  document.getElementById('nextButton').addEventListener('click', function() {
    
    console.log('Next button clicked');
    
    currentImageIndex++;
    
  });

  
  document.getElementById('prevButton').addEventListener('click', function() {
    
    console.log('Prev button clicked');
    
    currentImageIndex--;
    
  });

  
  document.getElementById('takePhotoButton').addEventListener('click', function() {
    
    console.log('Take a photo button clicked');
    
  });

  
  document.getElementById('doneButton').addEventListener('click', function() {
    
    console.log('Done button clicked');
    
  });
</script>

